{
  "manifest_version": 3,
  "name": "Highlighter",
  "version": "1.0",
  "description": "Highlight games in bookmarks",
  "icons": {
    "16": "/images/icons8-steam-16.png",
    "32": "/images/icons8-steam-32.png",
    "48": "/images/icons8-steam-48.png",
    "128": "/images/icons8-steam-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/search/*",
        "https://steam250.com/*",
        "https://steamdb.info/*"
      ],
      "js": [
        "GameHighlighter.js"
      ]
    }
  ]
}